{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Microshell",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-Ilib/libft/",
                "-Iinclude/",
				"-g",
				"-fsanitize=address",
                "src/*.c",
                "src/*/*.c",
                "src/*/*/*.c",
                "lib/libft/*.c",
                "-lreadline",
                "-o",
                "minishell_db"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}